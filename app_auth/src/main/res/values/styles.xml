<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGrayLight60</item>
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
    </style>
    <style name="AppTheme.Button.Label" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="font">@font/montserrat_bold</item>
    </style>

    <style name="MaterialButton.Dense" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:insetTop">12dp</item>
        <item name="android:insetBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textAppearance">@style/AppTheme.Button.Label</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="rippleColor">@color/colorWhite</item>
        <item name="android:textColor">@drawable/button_login_text_color</item>
        <item name="backgroundTint">@drawable/button_login_selector</item>
        <item name="background">@drawable/rounded_background</item>
    </style>
</resources>